{
  "name": "html-chunk-loader",
  "version": "0.6.10",
  "description": "Lightweight SSR/SSG Template Engine for Node",
  "homepage": "https://html-chunk-loader.vercel.app/",
  "main": "index.js",
  "bin": {
    "ssg": "lib/cli/ssg/index.js",
    "quickstart": "lib/cli/quickstart/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "prepare": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "docs": "typedoc",
    "preparePublish": "python scripts/refresh-build.py",
    "test:ssg": "node lib/cli/ssg/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "html",
    "ssr",
    "template",
    "template engine",
    "engine",
    "parser",
    "ssg",
    "rendering"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/abschill/html-chunk-loader"
  },
  "author": "abschill",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "pinst": "^2.1.6",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.22.6",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "^4.4.2"
  },
  "hcl_config": {
    "ssr_config": {
      "pathRoot": "test-pkg/barebones",
      "partials": "partials",
      "templates": "templates",
      "partialInput": {},
      "templateInput": {},
      "watch": false,
      "discoverPaths": false,
      "intlCode": "en",
      "debug": {
        "logMode": "silent",
        "logStrategy": "none",
        "logFile": null
      }
    },
    "static_config": {
      "pathRoot": "test-pkg/static",
      "partials": "layout",
      "templates": "pages",
      "outPath": "public",
      "debug": false,
      "cleanup": true
    }
  }
}
