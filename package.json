{
  "name": "blog-dot-abschill",
  "version": "2.1.8",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:less": "lessc styles/less/style.less styles/css/style.css",
    "watch:less": "npx lesscss-watch styles/less styles/css",
    "build:sass": "sass ./styles/sass/styles.scss:./styles/css/sass.css",
    "watch:sass": "sass -w ./styles/sass/styles.scss:./styles/css/sass.css",
    "watch:server": "nodemon index.js dev",
    "build:js": "webpack",
    "watch:js": "webpack --watch",
	"build:md": "node tools/compile-md",
    "build-all": "npm run build:less && npm run build:sass && npm run build:js && npm run build:md",
    "dev": "npm-run-all -p watch:js watch:server watch:less watch:sass",
    "start": "npm run build-all && node src prod"
  },
  "dependencies": {
    "@prismicio/client": "5.1.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "html-chunk-loader": "^0.6.15",
    "prismic-dom": "^2.2.7",
    "sweetalert2": "^11.4.9"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.173",
    "jsdom": "^19.0.0",
    "less": "^4.1.2",
    "lesscss-watch": "^0.1.3",
    "marked": "^4.0.15",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "sass": "^1.51.0",
    "swc-loader": "^0.2.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "homepage": "https://blog.abschill.com/"
}
