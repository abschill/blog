{
  "name": "blog-dot-abschill",
  "version": "2.2.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:sass": "sass ./web/styles/sass/styles.scss:./web/styles/css/style.css",
    "watch:sass": "sass -w ./web/styles/sass/styles.scss:./web/styles/css/style.css",
    "watch:server": "nodemon index.js dev",
    "build:js": "webpack",
    "watch:js": "webpack --watch",
    "build:md": "node tools/compile-md",
    "build-all": "npm run build:sass && npm run build:js && npm run build:md",
    "watch:post": "node tools/watch-styles.js",
    "dev": "make -j 4 watch-js watch-server watch-sass watch-post",
    "start": "npm run build-all && node src prod"
  },
  "dependencies": {
    "@prismicio/client": "5.1.0",
    "dotenv": "^16.0.1",
    "express": "^4.17.3",
    "html-chunk-loader": "^0.7.2",
    "prismic-dom": "^2.2.7",
    "sweetalert2": "^11.4.9"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.173",
    "jsdom": "^19.0.0",
    "marked": "^4.0.15",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-minify": "^1.1.0",
    "sass": "^1.51.0",
    "swc-loader": "^0.2.0",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "homepage": "https://blog.abschill.com/"
}
